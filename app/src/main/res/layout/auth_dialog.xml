<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_server_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/key_icon"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:text="@string/login_request"
            android:id="@+id/dialog_title"
            android:layout_toEndOf="@id/dialog_server_icon"/>
        <TextView
            android:id="@+id/dialog_server_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/dialog_title"
            android:layout_toEndOf="@id/dialog_server_icon"
            android:textSize="24sp"
            android:textColor="#000000"
            android:text="Server Name"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dialog_server_icon"
            android:layout_below="@id/dialog_server_name"
            android:id="@+id/dialog_server_address"
            android:textSize="18sp"
            android:text="https://server.base.url/"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:background="#009688">

        <TextView
            android:id="@+id/challenge_excerpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:singleLine="true"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="courier-new"
            android:text="OmZ1 _9SjQ sd0( s2df"
            />
        <TextView
            android:id="@+id/challenge_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textColor="#BBBBBB"
            android:singleLine="true"
            android:textSize="20sp"
            android:fontFamily="courier-new"
            android:text="30-s 2Sc1 ]S3[ 20sC"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/counter_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_light"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        android:maxLines="4"
        android:textSize="16sp"
        android:text="@string/double_check_challenge"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>


        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:background="#FFFFFF"
            android:textColor="@android:color/holo_red_dark"
            />

        <Button
            android:id="@+id/okay_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="@string/okay"
            android:textColor="@android:color/holo_green_dark"
            />

    </LinearLayout>

</LinearLayout>